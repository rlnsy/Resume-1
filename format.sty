% Font Sizes
% ----------
\newcommand{\sizeone}{2em}
\newcommand{\sizetwo}{1.318em}
\newcommand{\sizethree}{1em}
\newcommand{\sizefour}{0.618em}
\newcommand{\sizefive}{0.382em}
\newcommand{\sizesix}{0.236em}

% Main Font
% ---------
\setmainfont[Path=fonts/, BoldFont=CrimsonText-Bold]{CrimsonText-Regular}
\defaultfontfeatures{Ligatures=TeX}

% Font Styles
% -----------
\newcommand{\montBold}[1]{
    \fontsize{\sizefour}{\sizefour}
    {\fontspec[Path = fonts/,LetterSpace=10]{Montserrat-Bold} #1}
}
\newcommand{\montLight}[1]{
    \fontsize{\sizethree}{\sizethree}
    {\fontspec[Path = fonts/]{Montserrat-Light} #1}
}
\newcommand{\montReg}[1]{
    \fontsize{\sizeone}{\sizeone}
	{\fontspec[Path = fonts/,LetterSpace=5]{Montserrat-Regular} #1}
}
\newcommand{\crimBold}[1]{
    \fontsize{\sizethree}{\sizethree}
    {\fontspec [Path = fonts/]{CrimsonText-Bold} #1}
}
\newcommand{\crimSemiBold}[1]{
    \fontsize{\sizetwo}{\sizetwo}
    {\fontspec[Path = fonts/]{CrimsonText-SemiBold} #1}
}
\newcommand{\crimItalic}[1]{
    \fontsize{\sizethree}{\sizethree}
    {\fontspec[Path = fonts/]{CrimsonText-Italic} #1}
}
\newcommand{\crimReg}[1]{
    \fontsize{\sizethree}{\sizethree}
    {\fontspec[Path = fonts/]{CrimsonText-Regular} #1}
}

% Bullet-point
% ------------
\newenvironment{newitemize}
    {\itemize[nolistsep,topsep=\sizefive,itemsep=\sizefive,labelsep=\sizefour,leftmargin=*]}
    {\enditemize}

% Personal Info
% -------------
\newcommand{\header}[5]{
    \begin{center}
    	\montReg{#1}\\
    	\vspace{\sizefour}
    	\montLight{#2 -- #3 -- #4 -- #5}
    	\vspace{\sizefive}
    \end{center}
}

% Education, Experience, Skills
% -----------------------------
\newcommand{\chap}[2]{
    \raggedright{\hrule height 0.5pt}
    \vspace{\sizefive}
    \begin{addmargin}[\sizefive]{\sizefive}{
        \montBold{#1}
        \vspace{\sizefour}\\
        {#2}
    }\end{addmargin}
    \vspace{\sizethree}
}

% School
% ------
\newcommand{\school}[5]{
    \vspace{\sizefive}
    \crimSemiBold{#1} \hfill \crimReg{#2}\\
    \crimReg{#3 - #4} \hfill \crimReg{#5}\\
    \vspace{\sizefive}
}

% Job
% ---
\newcommand{\job}[5]{
    \vspace{\sizefive}
    \crimSemiBold{#1} \hfill \crimReg{#2}\\
    \crimReg{#3} \hfill \crimReg{#4}\\
    \crimReg{#5}
    \vspace{\sizefive}
}

% Projects
% --------
\newcommand{\project}[3]{
    \vspace{\sizefive}
    \crimSemiBold{#1} \hfill \crimItalic{#2}
    \vspace{\sizefive}\\
    \crimReg{#3}\\
    \vspace{\sizefive}
}

% Awards/Recognition
% ------------------
\newcommand{\award}[4]{
    \vspace{\sizefive}
    \crimSemiBold{#1} \hfill \crimReg{#2}
    \vspace{\sizefive}\\
    \crimReg{#3} \hfill \crimReg{#4}\\
    \vspace{\sizefive}
}
